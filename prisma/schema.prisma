generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  surname  String
  username String @unique
  password String
  email    String @unique

  @@map("users")
}

model MealEntry {
  id       Int      @id @default(autoincrement())
  calories Float
  proteins Float
  carbs    Float
  fats     Float
  amount   Float
  mealId   Int?
  meal     Meal?    @relation(fields: [mealId], references: [id])
  date     DateTime

  @@map("meal_entries")
}

model Meal {
  id        Int         @id @default(autoincrement())
  name      String
  calories  Float
  proteins  Float
  carbs     Float
  fats      Float
  MealEntry MealEntry[]

  @@map("meals")
}
